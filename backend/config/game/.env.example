# Saviing Game Application Environment Variables Template
# Copy this file to .env and fill in your actual values

# 서버 설정
SERVER_HOST=127.0.0.1
SERVER_PORT=8081

# 뱅크 API 서버 설정
BANK_API_BASE_URL=http://localhost:8080
BANK_API_CONNECT_TIMEOUT=3000
BANK_API_READ_TIMEOUT=5000

# 데이터베이스 설정
DB_URL=jdbc:mysql://localhost:3306/game
DB_USERNAME=root
DB_PASSWORD=root

# Redis 설정
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=super_strong_pw

# JPA 설정
JPA_DDL_AUTO=update
JPA_SHOW_SQL=false

# 로그 설정 파일
LOGGING_CONFIG_PATH=../config/common/logback-spring.xml

# API 버전
API_VERSION=v1.0
API_VERSION_PATH=v1

# 스웨거 활성화 여부
SWAGGER_ENABLED=true
SWAGGER_UI_ENABLED=true